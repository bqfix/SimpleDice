<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorNeutralBackground</item>
    </style>

    <style name="basic_text_style">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="header_style" parent="basic_text_style">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="more_button_style">
        <item name="android:background">@null</item>
        <item name="android:padding">16dp</item>
        <item name="srcCompat">@drawable/ic_baseline_more_vert_24px</item>
    </style>

    <style name="divider">
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <style name="horizontal_divider" parent="divider">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <style name="vertical_divider" parent="divider">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="d_keyboard_button">
        <item name="android:layout_height">36dp</item>
    </style>

    <style name="outlined_button_theme" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="strokeColor">@color/colorAccent</item>
    </style>

    <!-- A template for displaying a splash screen while the app is loading -->
    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <!-- Blank theme templates for Activities, required for pre-21 versions -->
    <style name="AppTheme.Main"/>
    <style name="AppTheme.Favorite"/>
    <style name="AppTheme.History"/>

    <style name="card_view">
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">8dp</item>
    </style>

    <style name="card_background">
        <item name="android:background">@color/colorContentBackground</item>
    </style>

    <!-- Blank templates for pre-21 -->
    <style name="main_card_view" parent="card_view"/>
    <style name="results_card_view" parent="card_view"/>
    <style name="main_card_background" parent="card_background"/>
    <style name="results_card_background" parent="card_background"/>
</resources>
