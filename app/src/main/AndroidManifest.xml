<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.simpledice">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="@string/admob_app_id" />
        <activity
            android:name="com.example.android.simpledice.ui.AboutActivity"
            android:parentActivityName="com.example.android.simpledice.ui.MainActivity"></activity>

        <receiver android:name="com.example.android.simpledice.widget.FavoritesWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/favorites_widget_info" />
        </receiver>

        <service
            android:name="com.example.android.simpledice.widget.ListWidgetService"
            android:permission="android.permission.BIND_REMOTEVIEWS" />

        <activity
            android:name="com.example.android.simpledice.ui.AddFavoriteActivity"
            android:parentActivityName="com.example.android.simpledice.ui.FavoriteActivity"
            android:windowSoftInputMode="stateAlwaysHidden|adjustNothing" />
        <activity
            android:name="com.example.android.simpledice.ui.FavoriteActivity"
            android:parentActivityName="com.example.android.simpledice.ui.MainActivity" />
        <activity
            android:name="com.example.android.simpledice.ui.HistoryActivity"
            android:parentActivityName="com.example.android.simpledice.ui.MainActivity" />
        <activity
            android:name="com.example.android.simpledice.ui.MainActivity"
            android:windowSoftInputMode="stateAlwaysHidden|adjustNothing">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>